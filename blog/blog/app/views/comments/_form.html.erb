<%= form_for [@post, Comment.new] do |form| %>
  <div class="form-body">
    <div class="field">
      <div class="label-input">
        <div class="form-section">
          <%= form.label :comment %>
        </div>
        <div class="form-section">
          <%= form.text_field :comment %>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= form.button "Submit", type: "submit" %>
    </div>
  </div>
<% end %>
