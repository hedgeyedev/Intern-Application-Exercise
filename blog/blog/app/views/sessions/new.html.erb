<h2 class="white-text">Login</h2>
<%= render 'layouts/back_arrow'%>
<!-- display login form -->
<div class="row blue-grey lighten-5 block-post">
	<%= form_tag "/login", method: :post do %>
	 <div>
	  <%= label_tag :email %>
	  <%= text_field_tag :email%>
	 </div>
	 <div>
	  <%= label_tag :password %>
	  <%= password_field_tag :password %>
	 </div>
	  <div class="actions right">
    	<i class="fas fa-sign-in-alt update-button"><%= submit_tag "Login!"%></i>
  	  </div>
	<%end%>
</div>