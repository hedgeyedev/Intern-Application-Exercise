<p id="notice"><%= notice %></p>

<div class = "post">
  <h2>
    <span class = "title">
      <%= @post.title %>
    </span>
    <span class = "operation">
      <%= link_to 'Edit', edit_post_path(@post) %> |
      <%= link_to 'Delete', @post, confirm: 'Are you sure?', method: :delete %>
    </span>
  </h2>
  <%= @post.content %>
</div>

<br/>

<%= button_to "Back", posts_path, :method => "get", :class => "button" %>
