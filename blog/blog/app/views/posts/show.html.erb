<p id="notice"><%= notice %></p>

<h1>
  <%= @post.title %>
</h1>

<p>
  <strong style="font-size:15px;"><%= capitalize_first(@post.content.to_s.split(" ")) %></strong>
  <%= (@post.content.to_s)[/ .*/m] %>
</p>

<aside style>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Delete', @post, method: :delete, data: { confirm: 'Are you sure? The post will be lost completely>' } %> |
  <%= link_to 'Back', posts_path %>
</aside>
