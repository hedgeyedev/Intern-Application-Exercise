

          <h2 class="white-text">Posts</h2>
        <% @posts.each do |post| %>
          <div class="row">
            <div class="row blue-grey lighten-5 block-post">
              <div class="row right-align">
                <%= link_to 'Show', post %> |
                <%= link_to 'Edit', edit_post_path(post) %> |
                <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>             
              <div class="row blue-grey-text"><h5><%= post.title %></h5></div>
              <div class="row post-body"><%= post.content %></div> 
              <%= link_to '... Read More', post %>
            </div>
          </div>
        <% end %>
      <br>
      <div class="row blue-grey lighten-5 block-post">
       <%= link_to 'New Post', new_post_path %>
      </div>
      
