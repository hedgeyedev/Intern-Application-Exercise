<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<h2><%= link_to 'New Post', new_post_path %></h2>

<table align="center">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Go to Post</th>
    </tr>
  </thead>

  <tbody>
    
    <% @posts.each do |post| %>
      <tr>
        <td style="text-align:left;"><%= convert_title(post.title) %></td>
        <td><%= (post.updated_at.to_s)[0, 10] %></td>
        <td><%= link_to 'Read', post %></td>

        <!--
        <td><%= post.content %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

