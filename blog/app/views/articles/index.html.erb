



  <div>
  <% @articles.each do |article| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <h3><%= article.title %></h3>
        <p><%= article.text %></p>
        <div class="container-fluid">
          <div class ="row">
            <div class="col-sm-4"><%= link_to 'Show', article_path(article) %></div>
            <div class="col-sm-4"><%= link_to 'Edit', edit_article_path(article) %></div>
            <div class="col-sm-4"><%= link_to 'Destroy', article_path(article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></div>
      </div>
      </div>
    </div>
    </div>
  <% end %>
</div>
