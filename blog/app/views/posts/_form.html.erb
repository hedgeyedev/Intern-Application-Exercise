<%= form_for @post, html: {multipart: true, class: "post-form"} do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <ul class="form-error-list">
      <% @post.errors.full_messages.each do |message| %>
        <li class="form-error-list-item"><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Title" %>
  </div>
  <div class="form-row">
    <%= f.label :author %><br>
    <%= f.text_field :author, placeholder: "Author" %>
  </div>
  <div class="form-row">
    <%= f.label :author_image, "Add an Image of Yourself" %><br>
    <%= f.file_field :author_image %>
  </div>

  <div class="form-row">
    <%= f.label :featured_image, "Featured Image" %><br>
    <%= f.file_field :featured_image %>
  </div>

  <div class="form-row">
    <%= f.label :content %><br>
    <%= f.text_area :content, rows: 12, class: "content-form-text" %>
  </div>
  <div class="form-row">
    <%= f.submit "Create Post", class: 'primary-button' %>
  </div>
<% end %>
