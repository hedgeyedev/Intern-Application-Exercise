<div id = "wholepage">
  <h1> Hedgeye Web development internship</h1>
  <h3> Created by: Dmitri Ostapenko</h2>

  <div id = "new">
   <%= link_to 'New Post', new_post_path %>
   </div>
  <div id = "bigdiv">
    <% @posts.each do |post| %>
      <div class = "post">
          <h4 class = "title"><%= post.title %></h4>
          <hr />
          <p class = "content"><%= post.content %></p>
          <ul class = "links">
            <li><%= link_to 'View', post %></li>
            <li><%= link_to 'Edit', edit_post_path(post) %></li>
            <li><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></li>
            <li><%= link_to 'Comments', post %></li>
          </ul>
        </div>
    <% end %>


    <br />

  </div>
</div>